{
  "name": "unifitz-api",
  "version": "1.0.0",
  "description": "Backend APIs for Win wibes",
  "main": "server.ts",
  "scripts": {
    "build": "rimraf ./dist && tsc && tsc-alias",
    "start": "node dist/server.js",
    "local": "NODE_ENV=local && nodemon --watch \"src/**/*.ts\" --exec ts-node src/server.ts",
    "dev": "tsc --watch",
    "lint": "eslint --ext .js,.ts .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:restart": "pm2 restart unifitz-api",
    "pm2:stop": "pm2 stop unifitz-api",
    "pm2:delete": "pm2 delete unifitz-api",
    "pm2:logs": "pm2 logs unifitz-api"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.772.0",
    "@aws-sdk/lib-storage": "^3.787.0",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "bull": "^4.16.5",
    "busboy": "^1.6.0",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.0.0",
    "http-status-codes": "^2.3.0",
    "ioredis": "^5.6.1",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.3",
    "mongoose": "^8.10.1",
    "multer": "^1.4.5-lts.2",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.10.0",
    "react": "^19.0.0",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.2",
    "resend": "^4.1.2",
    "ts-node": "^10.9.2",
    "typedi": "^0.10.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.1",
    "tsc": "^2.0.4",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">20.x"
  }
}
